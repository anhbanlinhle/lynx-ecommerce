<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lynx</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>

  <div class="topnav">
    <a href="/">Hello <%{%>
        <%= username%>
          <%}%>!</a>
    <a href="/users">Info</a>
    <a href="/vouchers">Vouchers</a>
    <a href="/cart">Cart</a>
    <a href="/orders">Orders</a>
    <a href="/sell">
      <%{%>
        <%= storeName%>
          <%}%>
    </a>
    <a href="/logout">Logout</a>
  </div>
  <div class="topnav">


    <a href="/sell/<%{%><%= storeId%><%}%>">Orders Management</a>
    <a href="/current-products/<%{%><%= storeId%><%}%>" class="active">Distribution</a>
    <a href="/new-distributions/<%{%><%= storeId%><%}%>">Import</a>
    <a href="/manage-voucher/<%{%><%= storeId%><%}%>">Vouchers</a>
  </div>

  <div class="w3-container">
    <h2 style="color: white;"><%= productName%>'s Tags</h2>
    <table class="w3-table-all w3-hoverable">
      <thead>
        <tr class="w3-light-grey">
          <th>Tag</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < tag.length; i++) { %>
          <tr>
            <td>
              <%= tag[i].type %>
            </td>

            <td>
              <form action="/remove-tag" method="post">
                  <input type="hidden" name="productId" value="<%= tag[i].productId %>">
                  <input type="hidden" name="storeId" value="<%= tag[i].storeId %>">
                  <input type="hidden" name="type" value="<%= tag[i].type %>">
                  <button type="submit">Remove!</button>
              </form>
            </td>

          </tr>

      </tbody>

      </tbody>
      <% } %>
    </table>
  </div>
</body>

</html>