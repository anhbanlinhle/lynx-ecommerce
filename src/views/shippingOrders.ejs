<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shipping</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>

  <div class="topnav">
    <a href="/">Hello <%{%>
        <%= username%><%}%>!</a>
    <a href="/users">Info</a>
    <a href="/vouchers">Vouchers</a>
    <a href="/cart">Cart</a>
    <a href="/orders">Orders</a>
    <a href="/sell">Sells</a>
    <a href="/logout">Logout</a>
  </div>
  <div class="topnav">
    <a href="/pending">Pending</a>
    <a href="/confirmed">Confirmed</a>
    <a href="/shipping"  class="active">Shipping</a>
    <a href="/cancelled">Cancelled</a>
    <a href="/received">Received</a>
  </div>

  <table class="w3-table-all w3-hoverable">
    <thead>
      <tr class="w3-light-grey">
        <th>Order Id</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Ship Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < shippingData.length; i++) { %>
        <tr>
          <td>
            #<%= shippingData[i].orderId %>
          </td>
          <td>
            $<%= shippingData[i].totalPrice %>
          </td>
          <td>
            <%= shippingData[i].status %>
          </td>
          <td>
            <%= shippingData[i].shipDate %>
          </td>
          <td>
            <form action="/orders/<%= shippingData[i].orderId%>/">
              <button>View</button>
            </form>
            <form action="/receive-order" method="post">
              <input type="hidden" name="orderId" value="<%= shippingData[i].orderId%>">
              <button>Received</button>
            </form>
          </td>
        </tr>

    </tbody>

    </tbody>
    <% } %>
  </table>
</body>

</html>