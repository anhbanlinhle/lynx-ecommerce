<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Management</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>

  <div class="topnav">
    <a href="/">Hello <%{%>
        <%= username%><%}%>!</a>
    <a href="/users">Info</a>
    <a href="/vouchers">Vouchers</a>
    <a href="/cart">Cart</a>
    <a href="/orders">Orders</a>
    <a href="/sell"><%{%><%= storeName%><%}%></a>
    <a href="/logout">Logout</a>
  </div>

  <div class="topnav">
    <a href="/sell/<%{%><%= storeId%><%}%>" class="active">Orders Management</a>
    <a href="/current-products/<%{%><%= storeId%><%}%>">Distribution</a>
    <a href="/new-distributions/<%{%><%= storeId%><%}%>">Import</a>
    <a href="/manage-voucher/<%{%><%= storeId%><%}%>">Vouchers</a>
  </div>
  
  <div class="w3-container">
    <h2 style="color: white;">Manage Orders</h2>
  <table class="w3-table-all w3-hoverable">
    <thead>
      <tr class="w3-light-grey">
        <th>Order</th>
        <th>Product</th>
        <th>Status</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < storeData.length; i++) { %>
        <tr>
          <td>
            <%= storeData[i].orderId %>
          </td>
          <td>
            <%= storeData[i].productName %>
          </td>
          <td>
            <%= storeData[i].status %>
          </td>
          <td>
            <%= storeData[i].quantity %>
          </td>
          <td>
            <form action="/ship-product/" method="post">
              <input type="hidden" name="orderId" value="<%= storeData[i].orderId %>">
              <input type="hidden" name="productId" value="<%= storeData[i].productId %>">
              <input type="hidden" name="storeId" value="<%= storeData[i].storeId %>">
              <button>Ship</button>
            </form>
          </td>
        </tr>

    </tbody>

    </tbody>
    <% } %>
  </table>
  </div>

</body>

</html>